{
  "name": "Hourly News Report",
  "description": "Every hour, search the web for top news, scrape summaries from the resulting links, and produce a concise bullet list of headlines with 1-3 sentence summaries.",
  "trigger": {
    "type": "schedule",
    "schedule": "0 * * * *",
    "event": ""
  },
  "actions": [
    {
      "type": "web_search",
      "params": {
        "query": "top news",
        "limit": 10,
        "freshness": "past_hour"
      }
    },
    {
      "type": "web_scrape",
      "params": {
        "input": "web_search.results",
        "fields": [
          "title",
          "url",
          "content",
          "excerpt"
        ],
        "perUrlTimeoutSeconds": 20
      }
    },
    {
      "type": "summarize",
      "params": {
        "input": "web_scrape.results",
        "outputFormat": "bullets",
        "bulletSchema": {
          "headline": true,
          "summarySentences": {
            "min": 1,
            "max": 3
          }
        },
        "style": "simple_concise"
      }
    }
  ],
  "mcp": {
    "whitelist": [],
    "blacklist": []
  },
  "skills": {
    "whitelist": [
      "web_search",
      "web_scrape",
      "summarize"
    ],
    "blacklist": []
  },
  "notifications": {
    "onSuccess": false,
    "onError": true,
    "channels": []
  }
}