{
  "version": "1.0",

  "metadata": {
    "id": "coder-delegation-trigger-001",
    "name": "Coder Delegation Trigger",
    "description": "Evaluates that supervisor correctly delegates coding tasks to the coder agent",
    "target": "supervisor",
    "tags": ["delegation", "coder", "trigger"]
  },

  "target": {
    "source": "file",
    "prompt": "supervisor.md"
  },

  "testCase": {
    "userPrompt": "Write a Python function that calculates the factorial of a number using recursion, and include error handling for negative numbers.",
    "history": []
  },

  "toolExpectations": {
    "expectedTools": [
      {
        "name": "native__delegate",
        "required": true,
        "parameters": {
          "type": {
            "matchType": "exact",
            "expected": "coder"
          }
        }
      }
    ],
    "forbiddenTools": []
  },

  "mockedOutputs": {
    "native__delegate": {
      "success": true,
      "output": {
        "delegated": true,
        "type": "coder",
        "mission": "Write a Python function that calculates the factorial of a number using recursion with error handling for negative numbers"
      }
    }
  },

  "responseExpectations": {
    "requiredElements": [],
    "optionalElements": [
      {
        "id": "acknowledges-delegation",
        "description": "Acknowledges delegating to coder",
        "matchType": "semantic",
        "value": "indicates task is being handled by a coder or code agent",
        "weight": 0.5
      }
    ],
    "constraints": {
      "maxLength": 3000,
      "minLength": 0
    }
  },

  "delegationExpectations": {
    "shouldDelegate": true,
    "expectedAgentType": "coder",
    "delegationRationaleShouldMention": ["code", "function", "programming", "implement"]
  },

  "scoring": {
    "toolSelection": {
      "weight": 0.4,
      "criteria": {
        "correct_tools_called": 0.7,
        "correct_parameters": 0.3
      }
    },
    "responseQuality": {
      "weight": 0.1,
      "criteria": {
        "required_elements": 0.5,
        "optional_elements": 0.4,
        "constraints_met": 0.1
      }
    },
    "delegationAccuracy": {
      "weight": 0.5,
      "criteria": {
        "correct_delegation_decision": 0.5,
        "correct_agent_type": 0.4,
        "quality_rationale": 0.1
      }
    }
  }
}
