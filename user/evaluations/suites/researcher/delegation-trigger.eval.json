{
  "version": "1.0",

  "metadata": {
    "id": "researcher-delegation-trigger-001",
    "name": "Researcher Delegation Trigger",
    "description": "Evaluates that supervisor correctly delegates research tasks to the researcher agent",
    "target": "supervisor",
    "tags": ["delegation", "researcher", "trigger"]
  },

  "target": {
    "source": "file",
    "prompt": "supervisor.md"
  },

  "testCase": {
    "userPrompt": "I'd like to learn about the history of artificial intelligence. Can you research the key milestones and influential figures?",
    "history": []
  },

  "toolExpectations": {
    "expectedTools": [
      {
        "name": "native__delegate",
        "required": true,
        "parameters": {
          "type": {
            "matchType": "exact",
            "expected": "researcher"
          }
        }
      }
    ],
    "forbiddenTools": []
  },

  "mockedOutputs": {
    "native__delegate": {
      "success": true,
      "output": {
        "delegated": true,
        "type": "researcher",
        "mission": "Research the history of artificial intelligence, including key milestones and influential figures"
      }
    }
  },

  "responseExpectations": {
    "requiredElements": [],
    "optionalElements": [
      {
        "id": "acknowledges-delegation",
        "description": "Acknowledges delegating to researcher",
        "matchType": "semantic",
        "value": "indicates task is being handled by a researcher or specialist agent",
        "weight": 0.5
      }
    ],
    "constraints": {
      "maxLength": 4000,
      "minLength": 0
    }
  },

  "delegationExpectations": {
    "shouldDelegate": true,
    "expectedAgentType": "researcher",
    "delegationRationaleShouldMention": ["research", "history", "learn", "information"]
  },

  "scoring": {
    "toolSelection": {
      "weight": 0.4,
      "criteria": {
        "correct_tools_called": 0.7,
        "correct_parameters": 0.3
      }
    },
    "responseQuality": {
      "weight": 0.1,
      "criteria": {
        "required_elements": 0.5,
        "optional_elements": 0.4,
        "constraints_met": 0.1
      }
    },
    "delegationAccuracy": {
      "weight": 0.5,
      "criteria": {
        "correct_delegation_decision": 0.5,
        "correct_agent_type": 0.4,
        "quality_rationale": 0.1
      }
    }
  }
}
