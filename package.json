{
  "name": "olliebot",
  "version": "0.1.0",
  "description": "Personal support agent with continuous monitoring and multi-channel communication",
  "type": "module",
  "workspaces": [
    "web",
    "tui"
  ],
  "scripts": {
    "dev:server": "nodemon --watch src --watch .env -e ts,json --exec \"tsx --inspect src/index.ts\"",
    "dev:console": "tsx src/index.ts console",
    "dev:web": "pnpm --filter olliebot-web dev",
    "dev:tui": "pnpm --filter olliebot-tui dev",
    "build": "pnpm run build:server && pnpm run build:web && pnpm run build:tui",
    "build:server": "tsc",
    "build:web": "pnpm --filter olliebot-web build",
    "build:tui": "pnpm --filter olliebot-tui build",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@inquirer/prompts": "^7.0.0",
    "@lancedb/lancedb": "^0.8.0",
    "@types/multer": "^2.0.0",
    "alasql": "^4.4.0",
    "chokidar": "^4.0.1",
    "cors": "^2.8.5",
    "cron-parser": "^5.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "multer": "^2.0.2",
    "playwright": "^1.58.1",
    "prismjs": "^1.30.0",
    "react-markdown": "^9.0.3",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "simple-git": "^3.27.0",
    "unpdf": "^0.12.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^9.0.3"
  }
}
