{
  "name": "olliebot",
  "version": "0.1.0",
  "description": "Personal support agent with continuous monitoring and multi-channel communication",
  "type": "module",
  "workspaces": [
    "web"
  ],
  "scripts": {
    "dev:server": "tsx watch --inspect --clear-screen=false --include .env src/index.ts",
    "dev:console": "tsx src/index.ts console",
    "dev:web": "npm run dev -w web",
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc",
    "build:web": "npm run build -w web",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@inquirer/prompts": "^7.0.0",
    "alasql": "^4.4.0",
    "chokidar": "^4.0.1",
    "cors": "^2.8.5",
    "cron-parser": "^5.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "playwright": "^1.58.1",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "simple-git": "^3.27.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^9.0.3"
  }
}
